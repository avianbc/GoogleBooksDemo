<form class="form-signin" ng-submit="user.register()">

    <h2 class="form-signin-heading">Register</h2>

    <label for="inputEmail" class="sr-only">Email address</label>
    <input class="form-control" type="email" ng-model="user.username" placeholder="Email" required autofocus />

    <label for="inputPassword" class="sr-only">Password</label>
    <input type="password" class="form-control" ng-model="user.password" placeholder="Password" required>
    <input type="password" class="form-control" ng-model="user.confirmPassword" placeholder="Confirm Password" required>

    <input class="btn btn-lg btn-primary btn-block" type="submit" value="Register Account" />
</form>